generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING") 
}

model User {
  id Int @id @default(autoincrement())
  uuid String @db.Uuid @unique
  name String @unique
  password String
  projects Project[]
}

model Project {
  id Int @id @default(autoincrement())
  createdBy Int
  owner User @relation(fields: [createdBy], references: [id])
}