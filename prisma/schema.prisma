generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING") 
}

model User {
  id Int @id @default(autoincrement())
  uuid String @db.Uuid @unique
  name String @unique
  password String
  projects Project[]
  @@map("i18n_editor_User")
}

model Project {
  id Int @id @default(autoincrement())
  createdBy String @db.Uuid
  name String
  locales String[]
  translations Translation[]
  owner User @relation(fields: [createdBy], references: [uuid])
  @@map("i18n_editor_Project")
}

model Translation {
  id Int @id @default(autoincrement())
  projectId Int
  key String
  items TranslationItem[]
  project Project @relation(fields: [projectId], references: [id])
  @@map("i18n_editor_Translation")
}

model TranslationItem {
  id Int @id @default(autoincrement())
  translationId Int
  locale String
  content String
  translation Translation @relation(fields: [translationId], references: [id])
  @@map("i18n_editor_TranslationItem")
}